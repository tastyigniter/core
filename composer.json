{
  "name": "tastyigniter/core",
  "description": "Seamless platform for modern restaurants",
  "homepage": "https://tastyigniter.com",
  "keywords": [
    "tastyigniter",
    "igniter",
    "flame",
    "laravel"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Samuel Adepoyigi",
      "email": "sam@sampoyigi.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "composer/composer": "^2.4",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^11.0",
    "laravel/sanctum": "4.0 as 3.2",
    "laravel/helpers": "^v1.6",
    "livewire/livewire": "^v3.0.0",
    "spatie/laravel-ignition": "^2.0",
    "spatie/laravel-query-builder": "^5.2",
    "kalnoy/nestedset": "~6.0",
    "scssphp/scssphp": "~1.0",
    "symfony/yaml": "~7.0",
    "tastyigniter/ti-ext-api": "^4.0@beta",
    "tastyigniter/ti-ext-automation": "^4.0@beta",
    "tastyigniter/ti-ext-broadcast": "^4.0@beta",
    "tastyigniter/ti-ext-cart": "^4.0@beta",
    "tastyigniter/ti-ext-local": "^4.0@beta",
    "tastyigniter/ti-ext-payregister": "^4.0@beta",
    "tastyigniter/ti-ext-reservation": "^4.0@beta",
    "tastyigniter/ti-ext-user": "^4.0@beta",
    "tastyigniter/ti-theme-orange": "^4.0@beta",
    "league/glide": "~2.2"
  },
  "require-dev": {
    "fakerphp/faker": "~1.14",
    "laravel/pint": "^1.2",
    "mockery/mockery": "^1.5.1",
    "nunomaduro/collision": "^8.1",
    "larastan/larastan": "^2.4.0",
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^2.34",
    "pestphp/pest-plugin-laravel": "^2.3"
  },
  "replace": {
    "kriswallsmith/assetic": "*",
    "leafo/scssphp": "*"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Igniter\\Flame\\ServiceProvider"
      ]
    }
  },
  "autoload": {
    "files": [
      "src/Flame/Support/Helpers/assets.php",
      "src/Flame/Support/Helpers/country.php",
      "src/Flame/Support/Helpers/template.php",
      "src/Flame/Support/Helpers/theme.php",
      "src/Flame/Support/Helpers/form.php",
      "src/Flame/Support/Helpers/helpers.php"
    ],
    "psr-4": {
      "Igniter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igniter\\Tests\\": "tests/src/"
    }
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint",
    "static": "vendor/bin/phpstan analyse --ansi --memory-limit 1056M"
  }
}
